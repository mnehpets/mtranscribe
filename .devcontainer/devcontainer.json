{
	"name": "mtranscribe",
	"image": "mcr.microsoft.com/devcontainers/javascript-node:bookworm",
	"features": {
		"ghcr.io/devcontainers-extra/features/pnpm:2": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/go:1": {
			"version": "latest"
		}
	},
	"remoteEnv": {
		"PNPM_HOME": "/home/node/opt/pnpm/bin",
		"PATH": "${containerEnv:PATH}:/home/node/opt/pnpm/bin"
	},
	"postCreateCommand": "pnpm install -g @fission-ai/openspec@latest",
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go",
				"Vue.volar"
			]
		}
	}
}
